# Database
# Local development
DATABASE_URL="postgresql://retroflow:retroflow_dev_password@localhost:5432/retroflow"
# Railway production - Railway will provide this automatically
# DATABASE_URL=${{Postgres.DATABASE_URL}}

# Redis
# Local development
REDIS_URL="redis://localhost:6379"
# Railway production - Railway will provide this automatically
# REDIS_URL=${{Redis.REDIS_URL}}

# Server
PORT=3001
NODE_ENV=development

# Session
SESSION_SECRET="your-super-secret-session-key-change-this-in-production"

# CORS
# Local development
CORS_ORIGIN="http://localhost:3000"
# Railway production - update with your Railway frontend URL
# CORS_ORIGIN="https://your-frontend-service.up.railway.app"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100